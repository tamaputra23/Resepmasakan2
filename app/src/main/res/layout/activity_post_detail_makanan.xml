<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".post_detail_makanan"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/img_detail_makanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <TextView
            android:id="@+id/title_detail_makanan"
            android:textSize="20sp"
            android:background="#639C66"
            android:padding="20dp"
            android:text="Judul makanan"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/deskripsi_detail_makanan"
            android:textSize="18dp"
            android:padding="20dp"
            android:text="Deskripsi makanan"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_bahan_detail_makanan"
            android:textSize="20sp"
            android:padding="20dp"
            android:background="#639C66"
            android:text="Bahan-bahan"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/deskripsi_bahan_detail_makanan"
            android:textSize="18dp"
            android:padding="20dp"
            android:text="Deskripsi bahan-bahan makanan"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cara_detail_makanan"
            android:textSize="20sp"
            android:padding="20dp"
            android:background="#639C66"
            android:text="Cara memasak"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/deskripsi_cara_detail_makanan"
            android:textSize="18dp"
            android:padding="20dp"
            android:text="Deskripsi cara masak"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_sumber_detail_makanan"
            android:textSize="20sp"
            android:padding="20dp"
            android:background="#639C66"
            android:text="Sumber"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sumber_detail_makanan"
            android:textSize="18dp"
            android:padding="20dp"
            android:autoLink="web"
            android:text="sumber gambar dan data makanan"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>