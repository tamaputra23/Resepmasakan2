<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="10dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/LinearLayoutMakanan"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gambar_lokasi"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="centerCrop"
            android:background="#2d2d2d"/>

        <TextView
            android:id="@+id/judul_lokasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="judul makanan"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat lokasi"
                android:id="@+id/alamat_lokasi"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jam buka"
                android:id="@+id/jambuka_lokasi"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:id="@+id/harga_lokasi"
                android:layout_marginLeft="10dp"
                android:text="harga"
                android:layout_marginTop="10dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOKASI"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:background="#3FD393"
                android:id="@+id/btn_lokasi"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>