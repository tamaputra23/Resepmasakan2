<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <!-- youtube thumbnail view to show the thumbnail of videos -->
            <com.google.android.youtube.player.YouTubeThumbnailView
                android:id="@+id/video_thumbnail_image_view"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/icon_play"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="videoid"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:visibility="invisible"
                android:id="@+id/videoId_Tv"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/judul_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="judul makanan"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sumber"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:id="@+id/video_sumber"/>
    </LinearLayout>


</android.support.v7.widget.CardView>